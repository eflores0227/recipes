<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @recipe.title %>
</p>

<p>
  <strong>Ingredients:</strong>
  <%= @recipe.ingredients %>
</p>

<p>
  <strong>Directions:</strong>
  <%= @recipe.directions %>
</p>

<p>
  <strong>Video:</strong>
  <%= @recipe.videos.first.link %>
</p>

<p>
  <strong>Comments:</strong>
  <% @recipe.comments.each do |comment| %>
    <li> <%= comment.title %> </li>
  <% end %>

<p>
